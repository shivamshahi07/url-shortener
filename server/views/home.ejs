<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HomePage</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <h1 class="block text-gray-700 text-sm font-bold mb-2">URL shortener </h1>
    <% if (locals.id) { %>
        <p>URL generated : http://localhost:8001/url/<%= id %></p>
     
    <% } %>
    <div>
        <form method="post" action="/url" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2">enter your original URL</label>
            <input type="text" name="url" placeholder="https://example.com" class=""></input>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">GENERATE</button>
        </form>
    </div>
    <div>
        <% if (locals.urls) { %>
            <table class="table-auto border border-indigo-600 ">
                <thead>
                    <th class=" border border-indigo-600  text-gray-700 text-sm font-bold mb-2">S.no</th>
                    <th class="border border-indigo-600  text-gray-700 text-sm font-bold mb-2">ShortId</th>
                    <th class="border border-indigo-600  text-gray-700 text-sm font-bold mb-2">Redirect</th>
                    <th class="border border-indigo-600  text-gray-700 text-sm font-bold mb-2">Clicks</th>
                </thead>
                <tbody>
                    <% urls.forEach((url,index) => { %>
                        <tr>
                            <td class="border border-indigo-600  text-gray-700 text-sm font-bold mb-2"><%= index+1 %></td>
                            <td class="border border-indigo-600  text-gray-700 text-sm font-bold mb-2"><%= url.shortId%></td>
                            <td class="border border-indigo-600  text-gray-700 text-sm font-bold mb-2"><%= url.redirectURL%></td>
                            <td class="border border-indigo-600  text-gray-700 text-sm font-bold mb-2"><%= url.visitHistory.length%></td>
                        </tr>
                     
                    <% }) %>
                </tbody>
            </table>
         
        <% } %>
    </div>
  </body>
</html>
